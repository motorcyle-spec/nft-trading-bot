{
  "name": "@nft-trading-bot/contracts",
  "version": "0.1.0",
  "description": "Smart contracts for NFT Trading Bot System - ERC-721 tokens with autonomous trading capabilities",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "forge build",
    "test": "forge test --gas-report",
    "test:watch": "forge test --watch",
    "test:gas": "forge test --gas-report > gas-report.txt",
    "test:coverage": "forge coverage",
    "test:fuzz": "forge test --match-test testFuzz",
    "deploy": "bash ../scripts/deploy-all.sh",
    "deploy:sepolia": "forge script script/DeployBotFactory.s.sol --broadcast --network sepolia --verify",
    "deploy:mainnet": "forge script script/DeployBotFactory.s.sol --broadcast --network mainnet --verify",
    "verify": "forge verify-contract --chain-id 11155111",
    "lint": "solhint 'src/**/*.sol'",
    "slither": "slither . --config-file slither.config.json",
    "fmt": "forge fmt",
    "fmt:check": "forge fmt --check",
    "clean": "forge clean",
    "dev": "forge test --watch"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std"
  }
}
