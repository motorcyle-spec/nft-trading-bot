{
  "name": "nft-trading-bot-system",
  "version": "0.1.0",
  "description": "An autonomous NFT-based trading bot factory system where each trading bot is represented as an ERC-721 token with its own secure wallet infrastructure. Bots operate independently on Uniswap V3, executing programmed strategies while ownership and control are managed through transferable NFTs with complete state preservation.",
  "private": true,
  "license": "MIT",
  "author": "NFT Trading Bot Contributors",
  "homepage": "https://github.com/yourusername/nft-trading-bot-system#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nft-trading-bot-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nft-trading-bot-system/issues"
  },
  "keywords": [
    "nft",
    "trading-bot",
    "ethereum",
    "solidity",
    "uniswap",
    "erc721",
    "autonomous-agents",
    "defi"
  ],
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=3.6.0"
  },
  "packageManager": "yarn@3.6.0",
  "workspaces": [
    "contracts",
    "frontend",
    "backend",
    "subgraph"
  ],
  "scripts": {
    "setup": "yarn install && yarn prepare",
    "prepare": "husky install && yarn workspaces foreach run prepare || true",
    "clean": "yarn workspaces foreach --parallel run clean && rm -rf node_modules .yarn",
    "build": "yarn workspaces foreach --parallel run build",
    "build:contracts": "yarn workspace contracts build",
    "build:frontend": "yarn workspace frontend build",
    "build:backend": "yarn workspace backend build",
    "build:subgraph": "yarn workspace subgraph build",
    "build:all": "yarn build:contracts && yarn build:backend && yarn build:frontend && yarn build:subgraph",
    "dev": "yarn workspaces foreach --parallel run dev",
    "dev:contracts": "yarn workspace contracts dev",
    "dev:frontend": "yarn workspace frontend dev",
    "dev:backend": "yarn workspace backend dev",
    "dev:subgraph": "yarn workspace subgraph dev",
    "test": "yarn workspaces foreach run test",
    "test:all": "yarn test:contracts && yarn test:frontend && yarn test:backend",
    "test:contracts": "yarn workspace contracts test",
    "test:contracts:watch": "yarn workspace contracts test:watch",
    "test:contracts:gas": "yarn workspace contracts test:gas",
    "test:contracts:coverage": "yarn workspace contracts coverage",
    "test:frontend": "yarn workspace frontend test",
    "test:frontend:e2e": "yarn workspace frontend test:e2e",
    "test:frontend:ui": "yarn workspace frontend test:ui",
    "test:backend": "yarn workspace backend test",
    "test:integration": "yarn test:contracts && yarn test:frontend:e2e",
    "lint": "yarn workspaces foreach --parallel run lint",
    "lint:contracts": "yarn workspace contracts lint",
    "lint:frontend": "yarn workspace frontend lint",
    "lint:backend": "yarn workspace backend lint",
    "format": "yarn workspaces foreach --parallel run format",
    "format:check": "yarn workspaces foreach --parallel run format:check",
    "deploy": "yarn deploy:contracts && yarn deploy:subgraph && yarn deploy:backend && yarn deploy:frontend",
    "deploy:contracts": "yarn workspace contracts deploy",
    "deploy:contracts:sepolia": "yarn workspace contracts deploy:sepolia",
    "deploy:contracts:mainnet": "yarn workspace contracts deploy:mainnet",
    "deploy:contracts:verify": "yarn workspace contracts verify",
    "deploy:frontend": "yarn workspace frontend deploy",
    "deploy:backend": "yarn workspace backend deploy",
    "deploy:subgraph": "yarn workspace subgraph deploy",
    "docs:generate": "yarn workspaces foreach run docs:generate || true",
    "docs:serve": "yarn workspaces foreach --parallel run docs:serve || true",
    "version": "yarn workspaces foreach --parallel run version",
    "info": "yarn workspaces foreach --parallel run info || yarn --version && node --version",
    "list-workspaces": "yarn workspaces list",
    "ci:build": "yarn build:all",
    "ci:test": "yarn test:all",
    "ci:lint": "yarn lint && yarn format:check",
    "ci:all": "yarn ci:lint && yarn ci:build && yarn ci:test",
    "pre-commit": "lint-staged",
    "pre-push": "yarn ci:all"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.4.0",
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "commitlint": "^18.4.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": [
      "forge fmt"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "jest --bail --findRelatedTests"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "chore",
          "revert",
          "ci"
        ]
      ],
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ]
    }
  }
}
